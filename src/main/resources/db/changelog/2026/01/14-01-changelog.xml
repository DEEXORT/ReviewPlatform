<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1768411953925-1" author="YuMaSe">
        <createTable tableName="categories">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_categories"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1768411953925-2" author="YuMaSe">
        <createTable tableName="products">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_products"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)"/>
            <column name="category_id" type="BIGINT"/>
        </createTable>
    </changeSet>
    <changeSet id="1768411953925-3" author="YuMaSe">
        <createTable tableName="reviews">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_reviews"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="content" type="VARCHAR(255)"/>
            <column name="rating" type="INT"/>
            <column name="created_at" type="DATETIME"/>
            <column name="user_id" type="BIGINT"/>
            <column name="product_id" type="BIGINT"/>
        </createTable>
    </changeSet>
    <changeSet id="1768411953925-4" author="YuMaSe">
        <createTable tableName="users">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_users"/>
            </column>
            <column name="username" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1768411953925-5" author="YuMaSe">
        <addUniqueConstraint columnNames="name" constraintName="uc_categories_name" tableName="categories"/>
    </changeSet>
    <changeSet id="1768411953925-6" author="YuMaSe">
        <addUniqueConstraint columnNames="title" constraintName="uc_products_title" tableName="products"/>
    </changeSet>
    <changeSet id="1768411953925-7" author="YuMaSe">
        <addUniqueConstraint columnNames="username" constraintName="uc_users_username" tableName="users"/>
    </changeSet>
    <changeSet id="1768411953925-8" author="YuMaSe">
        <addForeignKeyConstraint baseColumnNames="category_id" baseTableName="products"
                                 constraintName="FK_PRODUCTS_ON_CATEGORY" referencedColumnNames="id"
                                 referencedTableName="categories"/>
    </changeSet>
    <changeSet id="1768411953925-9" author="YuMaSe">
        <addForeignKeyConstraint baseColumnNames="product_id" baseTableName="reviews"
                                 constraintName="FK_REVIEWS_ON_PRODUCT" referencedColumnNames="id"
                                 referencedTableName="products"/>
    </changeSet>
    <changeSet id="1768411953925-10" author="YuMaSe">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="reviews" constraintName="FK_REVIEWS_ON_USER"
                                 referencedColumnNames="id" referencedTableName="users"/>
    </changeSet>

</databaseChangeLog>